<% if @route.present? %>
  <div class="route-summary card p-3 m-3">
    <p class="text-center"><i class="fa-solid fa-location-dot"></i><%= @origin %> <i class="fa-solid fa-arrow-right"></i> <i class="fa-solid fa-location-pin"></i><%= @destination %></p>
    <p class="text-center"><i class="fa-solid fa-stopwatch"></i> <%= @route['summary']['move']['time'] %> min | <i class="fa-solid fa-ruler-horizontal"></i> <%= @route['summary']['move']['distance'] %> m | <i class="fa-solid fa-shoe-prints"></i> <%= @route['summary']['move']['walk_distance'] %> m | <strong>Â¥</strong> <%= @route['summary']['move']['fare']['unit_0'] %></p>
  </div>
  <% @route['sections'].each_with_index do |section, index| %>
    <div class="section">
      <h4>Section <%= index + 1 %></h4>
      <p><strong>Type:</strong> <%= section['type'] %></p>
      <% if section['from'] %>
        <p><strong>From:</strong> <%= section['from']['name'] %></p>
      <% end %>
      <% if section['to'] %>
        <p><strong>To:</strong> <%= section['to']['name'] %></p>
      <% end %>
      <p><strong>Mode:</strong> <%= section['move'] %></p>
      <% if section['move'] && section['move']['time'] %>
        <p><strong>Time:</strong> <%= section['move']['time'] %> minutes</p>
      <% end %>
      <p><strong>Distance:</strong> <%= section['distance'] %> meters</p>
      <p><strong>Line Name:</strong> <%= section['line_name'] %></p>
      <% if section['transport'] %>
        <h5>Transport Details:</h5>
        <p><strong>Company:</strong> <%= section['transport']['company']['name'] if section['transport']['company'] %></p>
        <p><strong>Line Name:</strong> <%= section['transport']['name'] if section['transport']['name'] %></p>
        <% if section['transport']['fare'] %>
          <p><strong>Fare:</strong> <%= section['transport']['fare']['unit_0'] %></p>
        <% end %>
        <p><strong>Color:</strong> <%= section['transport']['color'] if section['transport']['color'] %></p>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>No route details available.</p>
<% end %>
