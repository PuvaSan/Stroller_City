<div id="suggested-content" class="content-section">
  <div id="review-places-list" class="list-group">
    <% @favorites.each do |favorite| %>
      <div class="favorite-place list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <div class="d-flex align-items-center">
            <img src="<%= favorite.user_image_url %>" alt="<%= favorite.user %>" class="user-image">
            <h5 class="mb-1 ml-3"><%= favorite.user %></h5>
          </div>
          <div class="d-flex align-items-center">
            <div class="star-rating">
              <p>
                <%= favorite.average_rating %>
                <% 5.times do |i| %>
                  <span>&#9733;</span>
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <img src="<%= favorite.place_image_url %>" alt="<%= favorite.name %>" class="place-image mt-3 mb-3">
        <p class="mb-1"><%= favorite.description %></p>
        <div class="d-flex justify-content-between align-items-end">
          <div class="bottom-left-buttons">
            <button class="btn btn-light btn-sm mx-1"><i class="fas fa-share"></i></button>
            <button class="btn btn-light btn-sm mx-1"><i class="fas fa-ellipsis-h"></i></button>
          </div>
        </div>
        <div class="d-flex flex-column align-items-end">
          <button class="btn btn-light btn-sm mb-1"><i class="fas fa-heart"></i></button>
          <button class="btn btn-light btn-sm mb-1"><i class="fas fa-comment"></i></button>
          <button class="btn btn-light btn-sm"><i class="fas fa-bookmark"></i></button>
        </div>
        <br>
        <br>
        <div class="bottom-right-date ml-3">
          <p class="date-text"><%= favorite.created_at.strftime("%H:%M %B %d, %Y") %></p>
        </div>

        <!-- Iterate over the reviews for this favorite -->
        <div class="reviews">
          <h4>Reviews</h4>
          <% favorite.reviews.each do |review| %>
            <div class="review">
              <h5><%= review.title %></h5>
              <p><%= review.content %></p>
              <small>Rating: <%= review.rating %>/5</small><br>
              <small>Reviewed by: <%= review.user_name %></small>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
