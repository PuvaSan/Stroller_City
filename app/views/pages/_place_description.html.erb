<div id="place-description" class="container d-none w-100">
  <div class="d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <div class="p-0 align-items-start" style="max-width: 16vh">
        <h2 class="my-2 font-weight-bold" data-home-map-target="name"></h2>
      </div>
      <div>
        <p class="aya-tags-special ms-3 mb-0"><i class="fa-solid fa-plus me-2"></i>Review</p>
      </div>
    </div>

    <button class="btn btn-primary br-30 text-white ms-3 px-3" id="go-button" data-action="click->home-map#direct" style="width: 60px; height: 60px; border-radius: 100%;">Go</button>
  </div>

  <div id="tags-container" class="d-flex flex-wrap"></div>

  <div class="d-flex justify-content-around my-4" id="tabs" data-controller="place-toggler">
    <div class="w-100 text-center active" id="overview" data-action="click->place-toggler#toggleTab"><h5>Overview</h5></div>
    <div class="w-100 text-center" id="reviews" data-action="click->place-toggler#toggleTab"><h5>Reviews</h5></div>
  </div>

  <div class="container-container w-100">
    <!-- Overview -->
    <div class="w-100" id="overview-container">
      <p data-home-map-target="info"></p>
      <!-- address -->
      <div class="d-flex align-items-center mb-2">
        <div class="icon1 me-2"><i class="fa-solid fa-location-dot"></i></div>
        <div class="d-flex flex-wrap">
          <p data-home-map-target="address" class="m-0"></p>
        </div>
      </div>
      <!-- phone_number -->
      <div class="d-flex align-items-center mb-2">
        <div class="icon1 me-2"><i id= "icon" class="fa-solid fa-phone"></i></div>
        <div class="d-flex flex-wrap">
          <p data-home-map-target="phone" class="m-0"></p>
        </div>
      </div>
      <h4 class="mt-3 mb-4"><strong>Photos</strong></h5>
      <div data-home-map-target="photo" id="place-photo-container" class="my-2"></div>
    </div>

    <!-- Reviews -->
    <div id="reviews-container" class="py-3 d-none">
      <%# review partial created in pages_controller in #render_reviews and inserted in home_map_controller fetch %>
      <%#= "no reviews" unless @places.present? %>
    </div>
  </div>
</div>
