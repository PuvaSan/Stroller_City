<!-- frame -->
<div style="height:100vh;width:100vw;" data-controller="home-map">

  <!-- location input -->
  <div id="input-fields" class="container p-3" style="position:absolute; top:0px; z-index:1;">
    <div class="input-group mb-3 d-none" data-home-map-target="originInput">
      <input type="text" class="form-control" id="origin">
      <!-- <div class="input-group-append">
        <button class="btn btn-primary"><i class="fa-solid fa-arrow-right"></i></button>
      </div> -->
    </div>
    <div class="input-group">
      <input type="text" class="form-control" id="destination">
      <!-- <div class="input-group-append">
        <button class="btn btn-primary"><i class="fa-solid fa-arrow-right"></i></button>
      </div> -->
    </div>
    <button class="btn btn-secondary d-none" id="go-button" data-action="click->home-map#direct">Go</button>
  </div>

  <!-- map -->
  <div id="map" style="z-index:0; height:100vh;" data-action="load@window->home-map#initMap"></div>

  <!-- draggable-panel -->
  <div id="draggable-panel" class="bg-white" data-controller="panel-resizer">

    <!-- draggable thingy -->
    <div id="resizer" class="w-100 d-flex align-items-center" data-action="mousedown->panel-resizer#grab touchstart->panel-resizer#grab">
      <hr id="panel-top-line">
    </div>

    <div id="panel-content">
      <!-- Place description -->
      <div>
        <div id="place-description" class="container mt-3">
          <div class="row">
            <div class="col">
              <h2 data-home-map-target="name"></h2>
              <%# <p>Address:</p> %>
              <p data-home-map-target="address"></p>
              <%# <p>photos:</p> %>
              <div data-home-map-target="photo"></div>
              <button class="btn btn-secondary d-none" data-action="click->home-map#showStuff" id="directions-button">Directions</button>
            </div>
          </div>
        </div>

        <!-- Reviews -->
        <div id="reviews-container" class="p-3 m-3">
          <%# review partial created in pages_controller in #render_reviews and inserted in home_map_controller fetch %>
          <%#= "no reviews" unless @places.present? %>
        </div>
      </div>

      <!-- home -->
      <div id="initial-content">
        <h1 class="mt-3">Hello!</h1>
        <p>I know where you live now</p>
        <div style="height: 100px; width: 100px; background-image: url(<%= image_path('Picture1.png') %>)"></div>
        <hr>
        <% 20.times do %>
          <p>testing</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
